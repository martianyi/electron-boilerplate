{
  "name": "electron-seed",
  "version": "0.2.0",
  "description": "Using electron to build an realtimecat app",
  "main": "",
  "scripts": {
    "postinstall": "cd app && npm install",
    "start": "electron ./app",
    "clean:mac": "gulp clean:mac",
    "clean:win": "gulp clean:win",
    "build:mac": "npm run clean:mac && build --mac",
    "build:win": "npm run clean:win && build --win"
  },
  "author": "Yi Kai",
  "license": "ISC",
  "devDependencies": {
    "del": "^2.2.0",
    "electron-builder": "^5.6.2",
    "electron-prebuilt": "^1.2.4",
    "gulp": "^3.9.0",
    "gulp-load-plugins": "~1.2.0",
    "gulp-util": "^3.0.7",
    "require-dir": "~0.3.0"
  },
  "build": {
    "appId": "",
    "app-category-type": "",
    "mac": {
      "title": "Electron Seed",
      "background": "assets/mac/installer.png",
      "icon": "assets/mac/icon.icns",
      "icon-size": 128,
      "contents": [
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 220,
          "type": "file"
        }
      ]
    },
    "win": {
      "title": "Electron Seed",
      "version": "x.x.x.x",
      "iconUrl": "assets/win/icon.ico"
    }
  }
}
